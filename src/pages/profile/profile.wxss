page {
  height: 100%;
}

.container_top {
}

.header {
  width: 100%;
  height: 380rpx;
  text-align: center;
  background-color: #6cf;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container_mid {
  border-top: none;
}

.header-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
}

.header-nickname {
  display: block;
  font-size: 11pt;
}

.menu-item {
  width: 100%;
  height: 82rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-item-right {
  display: flex;
  align-items: center;
}

.menu-item-img-left {
  width: 46rpx;
  height: 46rpx;
  display: inline-block;
  margin: 0 24rpx;
}

.menu-item-img-right {
  width: 46rpx;
  height: 46rpx;
  display: inline-block;
  margin: 0 24rpx;
}

.menu-item-text {
  display: inline-block;
  font-size: 11pt;
}

.menu-item-text-small {
  display: inline-block;
  font-size: 10pt;
  color: #888;
}
